<h1>Edit Your Profile</h1>

<%= form_for(@user) do |f| %>
  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :concentration %>
    <%= f.select :concentration, User::CONCENTRATIONS, prompt: "Select your concentration" %>
  </div>
  <%= f.submit "Update Profile" %>
<% end %>
